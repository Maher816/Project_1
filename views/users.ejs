<!-- This displays the list of existing users -->
<!DOCTYPE html>

<html lang="en">



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--uses the navbar from partials folder-->
    <link rel="stylesheet" href="/css/main.css" />
    <%- include('partials/navbar', {page: '/user'}) %>
    <!--tab title-->
    <title>users</title>
</head>

<body tabindex="-1">

    <div class="container mx-auto p-4"> <!--this makes the grey bar look nice-->
    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">Users </h1>
  
            <p class="py-6">Search for friends</p>
            <!--banner links-->
            
          </div>
    </div>
    </div>

    <!--table-->
    <br />
    <div class="overflow-x-auto overflow-y-hidden">
      <table class="table table-zebra">
        
        <!-- head -->
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>View page</th>
            <th>PLACEHOLDER</th>
          </tr>
        </thead>
<!--the data or user in the parentheses doesn't matter how its named-->
        <tbody>
          <% data.forEach(user=>{ %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><a href="/user/<%=user._id%>">view</a></td>
            </tr>
          <% }) %>

        </tbody>
      </table>
    </div>
<br>
<br>
  </body>



</html>